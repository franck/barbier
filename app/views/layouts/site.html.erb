  <%= csrf_meta_tags %>
</head>
<body id="<%= get_controller(params[:controller]) %>">
	<%= salon_navbar(@salon) %>
	<div class="container-fluid">
		<div class="row-fluid">
			<div class="span3">
				<%= site_nav %>
			</div>
			<div class="span9">
				<%= render "shared/flashbox" %>
				<%= yield %>
			</div>
		</div><!-- end of row fluid -->
	</div>
</body>
</html>