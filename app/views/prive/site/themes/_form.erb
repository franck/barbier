<div>
	<%= f.label :title, "Titre", :class => 'required' %>
	<%= f.text_field :title, :class => 'input-xxlarge' %>
</div>

<p>&nbsp;</p>

<ul class="nav nav-tabs">
  <li class="active"><a href="#html" data-toggle="tab">HTML</a></li>
  <li><a href="#css" data-toggle="tab">CSS</a></li>
</ul>

<div class="tab-content">
  <div class="tab-pane active" id="html">
  	<%= f.text_area :html, :rows => "15", :class => 'input-xxlarge' %>
		<div id="html_editor" style="position: relative; width: 100%; height: 400px;"><%= f.object.attributes['html'] %></div>
  </div>
  <div class="tab-pane" id="css">
		<%= f.text_area :css, :rows => "15", :class => 'input-xxlarge' %>
  	<div id="css_editor" style="position: relative; width: 100%; height: 400px;"><%= f.object.attributes['css'] %></div>
  </div>
</div>

<p>&nbsp;</p>