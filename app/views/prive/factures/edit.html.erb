<div id="facture">
  <h1>Modifier la facture</h1>

  <%= form_for [:prive, @facture], :class => 'form-horizontal' do |f| %>

    <%= render "form", :f => f %>

    <div style="clear:both">
      <%= f.submit "Modifier", class: 'btn' %>
      <%= link_to "annuler", session[:return_to] || prive_client_path(@client) %>
    </div>

  <% end %>
</div>
