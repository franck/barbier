<h1>Liste de clients</h1>

<%= render "search" %>

<p>
	<%= link_to ("<i class='icon-user icon-white'></i>&nbsp;Nouveau client").html_safe, new_client_path, :class => 'btn btn-primary' %>
</p>

<%= paginate @clients %>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Nom</th>
			<th>Email</th>
			<th>TÃ©l</th>
		</tr>
	</thead>
	<% if @clients.size > 0 %>
	<% for client in @clients %>
	<tr>
		<td><%= link_to client.name, client_path(client) %></td>
		<td><%= client.email %></td>
